<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2DBE60" 
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cloudtitleimage" />

        <ImageView
            android:id="@+id/loudTree"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/cloud_tree" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="随时随地记录身边的大事,小事,生活趣事!"
            android:paddingTop="10dp"
            android:paddingBottom="25dp"
            android:textColor="#fff"
            android:textSize="16sp" />
        
        <ImageView  
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/shape_rect"/>
        
    </LinearLayout>

    <FrameLayout 
        android:id="@+id/splash_bottom"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="250dp"
        >
    </FrameLayout>

</LinearLayout>